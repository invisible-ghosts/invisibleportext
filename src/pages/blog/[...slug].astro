---
import { getCollection } from 'astro:content';
import Layout from '../../layouts/Layout.astro';
import PostHeader from '../../components/PostHeader.astro';
import RelatedPosts from '../../components/RelatedPosts.astro';
import CallToAction from '../../components/CallToAction.astro';

// Generate static paths
export async function getStaticPaths() {
  const blogEntries = await getCollection('blog', ({ data }) => {
    return !data.draft;
  });
  
  return blogEntries.map(entry => ({
    params: { slug: entry.slug },
    props: { entry },
  }));
}

// Get the blog post data
const { entry } = Astro.props;
const { Content } = await entry.render();

// Extract metadata
const { title, pubDate, description, author, authorImage, image, tags = [] } = entry.data;
---

<Layout title={title} description={description}>
  <article class="mx-auto max-w-4xl px-4 py-12 blog">
    <PostHeader 
      title={title}
      pubDate={pubDate}
      author={author}
      authorImage={authorImage}
      tags={tags}
      image={image}
    />
    
    <!-- Blog content -->
    <div class="prose prose-lg max-w-none animate-slide-up">
      <Content />
    </div>
    
     <!-- Related posts -->
    <RelatedPosts entry={entry} tags={tags} />
    
    <!-- Call to action -->
    <CallToAction />
  </article>
</Layout>
