		<section id="benefits" class="max-w-4xl container mx-auto px-4 py-12">
			<h2 class="text-4xl font-black tracking-tight mb-8">
				{t("benefits.title")}
				<div class="h-1 w-24 bg-emerald-400 mt-2"></div>
			</h2>
			<div class="bg-white p-8 rounded-xl border-2 border-black shadow-md">
				<div class="grid grid-cols-1 md:grid-cols-2 gap-6">
