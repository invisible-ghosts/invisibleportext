---
import Layout from '@/layouts/Layout.astro';
import InvisibleTextTool from '@/components/InvisibleText';
import {Copy, Check} from "lucide-react";
import { getLangFromUrl, useTranslations } from '../../i18n/utils';
import { languages } from '../../i18n/ui';


export function getStaticPaths() {
	return Object.keys(languages).map((lang) => ({
		params: { lang },
	}));
}
const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

const title = t("meta.title")
const description = t("meta.description")
---
<Layout title={title} description={description}>
	<main class="space-y-12">
		<section class="text-center container mx-auto px-4 py-12">
			<h1 class="text-6xl font-black tracking-tight mb-2">
				{t("hero.title")}
				<div class="h-2 w-1/3 bg-emerald-400 mx-auto mt-2"></div>
			</h1>
			<p class="text-xl mt-8 max-w-3xl mx-auto">
				{t("hero.subtitle")}
			</p>
		</section>

		<section class="container mx-auto px-4">
			<InvisibleTextTool astroUrl={Astro.url} client:load />
		</section>


		<section id="what-is" class="max-w-4xl container mx-auto px-4 py-12">
			<h2 class="text-4xl font-black tracking-tight mb-8">
				{t("whatIs.title")}
				<div class="h-1 w-24 bg-emerald-400 mt-2"></div>
			</h2>
			<div class="prose prose-lg max-w-none">
				<p class="text-lg text-gray-700 mb-6">{t("whatIs.content1")}</p>
				<p class="text-lg text-gray-700 mb-6">{t("whatIs.content2")}</p>
			</div>
		</section>	

		<section id="how-to" class="max-w-4xl container mx-auto px-4 py-12">
			<h2 class="text-4xl font-black tracking-tight mb-8">
				{t("howTo.title")}
				<div class="h-1 w-24 bg-emerald-400 mt-2"></div>
			</h2>
			<div class="grid grid-cols-1 md:grid-cols-3 gap-6">
				<div class="bg-white p-6 rounded-xl border-2 border-black shadow-md">
				<div class="w-12 h-12 bg-emerald-100 rounded-full flex items-center justify-center mb-4">
					<span class="font-bold text-xl">1</span>
				</div>
				<h3 class="text-xl font-bold mb-2">{t("step1.title")}</h3>
				<p>{t("step1.content")}</p>
				</div>
				<div class="bg-white p-6 rounded-xl border-2 border-black shadow-md">
				<div class="w-12 h-12 bg-emerald-100 rounded-full flex items-center justify-center mb-4">
					<span class="font-bold text-xl">2</span>
				</div>
				<h3 class="text-xl font-bold mb-2">{t("step2.title")}</h3>
				<p>{t("step2.content")}</p>
				</div>
				<div class="bg-white p-6 rounded-xl border-2 border-black shadow-md">
				<div class="w-12 h-12 bg-emerald-100 rounded-full flex items-center justify-center mb-4">
					<span class="font-bold text-xl">3</span>
				</div>
				<h3 class="text-xl font-bold mb-2">{t("step3.title")}</h3>
				<p>{t("step3.content")}</p>
