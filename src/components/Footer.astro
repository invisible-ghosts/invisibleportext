---
import { getLangFromUrl, useTranslations } from '@/i18n/utils';
import { languages } from '@/i18n/ui';


export function getStaticPaths() {
	return Object.keys(languages).map((lang) => ({
		params: { lang },
	}));
}
const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---
<footer class="bg-white border-t-2 border-black pt-8">
  <div class="container mx-auto px-4 py-4">
    <div class="flex flex-col md:flex-row justify-between items-center">
      <div class="mb-6 md:mb-0">
        <a href="/" class="flex items-center gap-2">
          <div class="w-8 h-8 bg-white border-2 border-black rounded-md flex items-center justify-center">
            <span class="font-bold text-sm">IT</span>
          </div>
          <span class="font-bold text-lg tracking-tight">
            INVISIBLE TEXT
            <div class="h-1 w-full bg-emerald-400 mt-0.5"></div>
          </span>
        </a>
      </div>
      <div class="flex flex-col md:flex-row gap-8">
        <div>
          <h4 class="font-bold mb-2">{t("nav.navigation")}</h4>
          <ul class="space-y-1">
            <li>
              <a href="/" class="text-sm hover:text-emerald-500 transition-colors">
                {t("nav.home")}
              </a>
            </li>
            <li>
              <a href="/#features" class="text-sm hover:text-emerald-500 transition-colors">
                {t("nav.features")}
              </a>
            </li>
            <li>
              <a href="/#use-cases" class="text-sm hover:text-emerald-500 transition-colors">
                {t("nav.usecases")}
              </a>
            </li>
            <li>
              <a href="/#faq" class="text-sm hover:text-emerald-500 transition-colors">
                {t("nav.faqs")}
              </a>
            </li>
            <li>
              <a href="/blog" class="text-sm hover:text-emerald-500 transition-colors">
